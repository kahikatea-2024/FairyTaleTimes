---
interface Props {
  quote: string
  source: string
}

const { quote, source } = Astro.props as Props

import { Icon } from 'astro-icon/components'
---

<div class="text-white">
  <Icon name="quote" class="text-2xl" />
  <p class="my-4">
    {quote}
  </p>
  <p class="my-4 font-bold">
   - {source}
  </p>
</div>
